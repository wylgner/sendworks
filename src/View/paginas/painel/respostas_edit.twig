{% extends "templates/painel.twig"%}
{% block head %}
    <title>EZ CODE</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="imagens/ez_icone.png">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">


    <link href="/css/perfil.css" rel="stylesheet" type="text/css"/>
    <link href="/css/cadastro.css" rel="stylesheet" type="text/css"/>
{% endblock %}
{% block conteudo %} 
    <div class="row">
        <div class="col-xs-2">

        </div>
        <div class="col-sm-4">

            <form id="formResposta" action="/formRespostasEdit" method="POST">
                <div class="form-group">
                    <label for="nome">ID</label>
                    <input type="text" class="form-control" value="{{ resposta['id'] }}" disabled>
                    <input type="hidden" class="form-control" name="idUser" value="{{ resposta['id'] }}">
                </div>
                <div class="form-group">
                    <label for="titulo">Algoritmo</label>
                    <input type="text" class="form-control" name="algoritmo" value="{{ resposta['algoritmo'] }}">
                </div>
                
                <button type="submit" class="btn btn-success col-sm-3">Submit</button>
                <a href="/respostas/respostas_excluir/{{ resposta['id'] }}" class="btn btn-danger col-sm-3" style="margin-left: 30px">Excluir</a>
            </form>
        </div>
    </div>

{% endblock %}

